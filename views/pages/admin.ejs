                          Cancel
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>
    <script>
      // ADD DATA
      document
        .getElementById("addDataButton")
        .addEventListener("click", function () {
          document.getElementById("addDataModal").classList.remove("hidden");
        });

      document
        .getElementById("closeModal")
        .addEventListener("click", function () {
          document.getElementById("addDataModal").classList.add("hidden");
        });

      // DELETE
      const deleteModal = document.getElementById("deleteModal");
      const closeModal = document.querySelectorAll(".closeModal");
      const deleteButton = document.querySelectorAll(".deleteButton");
      const deleteData = document.querySelectorAll(".deactivate");
      let id = 1;

      deleteButton.forEach((button) => {
        button.addEventListener("click", function (event) {
          event.preventDefault();

          deleteModal.classList.remove("hidden");
        });
      });

      closeModal.forEach((button) => {
        button.addEventListener("click", function () {
          deleteModal.classList.add("hidden");
        });
      });

      // GET DATA DELETE
      deleteButton.forEach((button) => {
        button.addEventListener("click", function (event) {
          event.preventDefault();

          id = event.target.parentNode.getAttribute("href").split("/").pop();

          console.log(id);
        });
      });

      // DELETEEEEEEEEEEEE BENERANNNN
      deleteData.forEach((button) => {
        button.addEventListener("click", function () {
          const deleteLink = event.target.parentNode;
          deleteLink.href = `/siswas/del/admin/${id}`;
        });
      });

      // UPDATE
      const updateModal = document.getElementById("updateModal");
      const closeUpdateModal = document.querySelectorAll(".closeUpdateModal");
      const updateButton = document.querySelectorAll(".updateDataButton");
      const updateData = document.querySelectorAll(".updateButton");
      let idUpdate = 1;

      updateButton.forEach((button) => {
        button.addEventListener("click", function (event) {
          event.preventDefault();
          idUpdate = event.target.parentNode
            .getAttribute("href")
            .split("/")
            .pop();

          fetch(`/siswas/get/update/${idUpdate}`)
            .then((response) => response.json())
            .then((res) => {
              console.log(res.data);
              updateModal.classList.remove("hidden");

              // SET FIELD SESUAI RESPONSE
              const data = res.data;
              const fullname = document.getElementById("updFullname");
              const category = document.getElementById("updClassCategory");
              const birthPlace = document.getElementById("updBirthPlace");
              const birthDate = document.getElementById("updBirthDate");
              const address = document.getElementById("updAddress");
              const phone = document.getElementById("updPhone");
              const parentsName = document.getElementById("updParentsName");
              const parentsContact =
                document.getElementById("updParentsContact");
              fullname.value = data.fullname;
              category.value = data.class_category;
              birthPlace.value = data.birth_place;
              birthDate.value = new Date(data.birth_date)
                .toISOString()
                .split("T")[0];
              address.textContent = data.address;
              phone.value = data.phone;
              parentsName.value = data.parents_name;
              parentsContact.value = data.parents_contact;

              const form = document.getElementById("updateForm");
              form.action = `siswas/upd/admin/${idUpdate}`;
            })
            .catch((error) => {
              console.error(error);
            });
        });
      });

      closeUpdateModal.forEach((button) => {
        button.addEventListener("click", function () {
          updateModal.classList.add("hidden");
        });
      });

      // UPDATEEEEEEEEEEE
      updateData.forEach((button) => {
        button.addEventListener("click", function () {
          const form = document.getElementById("updateForm");
          form.action = `/siswas/upd/admin/${idUpdate}`;
        });
      });

      // FILTER DATA ???
      const selectElement = document.getElementById("category");
      const currentURL = window.location.pathname;
      const currentCategory = currentURL.substring(
        currentURL.lastIndexOf("/") + 1
      );

      const optionIndex = {
        all: 0,
        matematika: 1,
        ipa: 2,
        ips: 3,
        bahasa: 4,
        bela_diri: 5,
        tari: 6,
      };

      
      const selectedOptionIndex = optionIndex[currentCategory];
      if (selectedOptionIndex) {
        selectElement.selectedIndex = selectedOptionIndex;
      }
      
      selectElement.addEventListener("change", function () {
        const selectedOption = this.value;

        if (selectedOption) {
          const newURL = `/siswas/admin/${selectedOption}`;
          console.log("URL", newURL);
          console.log("Seleected Option", selectedOption);
          window.location.href = newURL;
        }
      });
    </script>
  </body>
</html>
